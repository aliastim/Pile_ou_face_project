{% extends 'base.html.twig' %}

{% block main %}

    <style>
        body
        {
            background: linear-gradient(135deg, #EA5C54 0%, #bb6dec 100%);
            height: 100vh;
        }

    </style>

    <div class="container" style="margin-top: 50px;">
        <h1 class="text-center titre-profond">Modification d'Utilisateurs</h1>

        <br><br>

        <div class="text-center">
            <form method="get" action="../edit_users.php" class="">
                <input type="hidden" name="id" value="{{ id }}">
                <input class="input-profond" type="text" name="firstname" class="form-control" value="{{ firstname }}"><br>
                <input class="input-profond" type="text" name="name" class="form-control" value="{{ name }}"><br>
                <input class="input-profond" type="text" name="username" class="form-control" value="{{ username }}"><br>
                <input class="input-profond" type="text" name="num" class="form-control" value="{{ num }}"><br>
                <input class="input-profond" type="text" name="password" class="form-control" value="{{ password }}" style="margin-bottom: 50px;"><br>
                <input type="submit" class="btn btn-outline-warning" value="Editer">
            </form>
        </div>
    </div>
{% endblock %}