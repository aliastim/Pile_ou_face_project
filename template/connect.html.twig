{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="text-center">Page de connexion</h1>

    <form method="post" action="../connect.php">
        <div class="form-group">
            <label for="exampleInputEmail1">Nom d'utilisateur</label>
            <input type="text" class="form-control" name="mail" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">
            <small id="emailHelp" class="form-text text-muted">Un peu d'imagination...</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mot de passe</label>
            <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>

{% endblock %}